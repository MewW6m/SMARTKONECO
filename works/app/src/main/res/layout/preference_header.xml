<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/presync"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/listborder"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/appCompatImageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/ic_refresh" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="アクティベート"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/appCompatImageView"
            android:layout_toEndOf="@+id/appCompatImageView"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:id="@+id/textView4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="konecoを使って時間割と成績表を同期します"
            android:textColor="@color/darkgray"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/precustomize"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/listborder"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/appCompatImageView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/ic_hand_point_up" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="カスタマイズ"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/appCompatImageView1"
            android:layout_toEndOf="@+id/appCompatImageView1"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:id="@+id/textView5" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="見た目などをカスタマイズします"
            android:textColor="@color/darkgray"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5" />
        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/prenortification"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/listborder"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/appCompatImageView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/ic_bell" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="通知"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/appCompatImageView2"
            android:layout_toEndOf="@+id/appCompatImageView2"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:id="@+id/textView7" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="通知機能を設定します"
            android:textColor="@color/darkgray"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/pretimetable"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/listborder"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/appCompatImageView3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/ic_calendar" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="時間割編集"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/appCompatImageView3"
            android:layout_toEndOf="@+id/appCompatImageView3"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:id="@+id/textView8" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="デフォルトの時間割を編集します"
            android:textColor="@color/darkgray"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/textView8"
            android:layout_alignStart="@+id/textView8" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/prerecord"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/listborder"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/appCompatImageView4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/ic_agenda" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="成績表編集"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/appCompatImageView4"
            android:layout_toEndOf="@+id/appCompatImageView4"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:id="@+id/textView9" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="単位習得状況、履修科目一覧を編集"
            android:textColor="@color/darkgray"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/textView9"
            android:layout_alignStart="@+id/textView9" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/preerror"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/listborder"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/appCompatImageView5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/ic_warning" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="エラー報告"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/appCompatImageView5"
            android:layout_toEndOf="@+id/appCompatImageView5"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:id="@+id/textView10" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="エラーの報告や要望はこちらにお願いします"
            android:textColor="@color/darkgray"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/textView10"
            android:layout_alignStart="@+id/textView10" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/prerule"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/listborder"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/appCompatImageView6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/ic_help_alt" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="このアプリの使い方"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/appCompatImageView6"
            android:layout_toEndOf="@+id/appCompatImageView6"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:id="@+id/textView12" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="使い方や利用規約が記載されています"
            android:textColor="@color/darkgray"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/textView12"
            android:layout_alignStart="@+id/textView12" />
    </RelativeLayout>
</LinearLayout>